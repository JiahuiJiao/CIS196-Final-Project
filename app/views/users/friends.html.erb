<% @user = User.find(params[:id])%>
<% @friends = @user.friends %>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @friends.each do |friend| %>
      <tr>
        <td><%= friend.name %></td>
        <td><%= friend.email %></td>
		<td><%= link_to 'Show', "/#{current_user.id}/guestviews/#{friend.id}", :class => 'link_button' %></td>
		<td><%= link_to 'Unfriend', "/#{current_user.id}/unfriend/#{friend.id}", method: :delete, :class => 'link_button' %> </td>
      </tr>
    <% end %>
  </tbody>
</table>